#!/usr/bin/bash
dirsearch="$(find . -maxdepth 1 -type d -not -name '.*')"

function topicSearch() {
    find $1 -maxdepth 1 -type f -not -name 'index.adoc' -name '*.adoc'
}

for dir in $dirsearch; do
     echo "dir: " $dir
     for adoc in $(topicSearch $dir); do
        echo "adoc: " $adoc
    done
done

